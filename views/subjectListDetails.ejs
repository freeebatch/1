<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subject List Details</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <link rel="stylesheet" href="/stylesheets/subjectListDetails.css">
</head>

<body>
    <header>
        <a href="/batches/<%= batchNameSlug %>/details">
            <i class="ri-arrow-left-line"></i></a>
        <h1>
            <%= subjectListDetails.data.subject %>
        </h1>
    </header>
    <div class="container">
        <% if (subjectListDetails.data.length> 0) { %>
            <% subjectListDetails.data.forEach(course=> { %>
                <a href="/batches/<%= batchNameSlug %>/subject/<%= subjectSlug %>/contents/<%= course.slug %>"
                    class="mat-card">
                    <div class="border-left">
                        <h3 class="tile-title">
                            <% if (course.name.length > 30) { %>
                                <%= course.name.slice(0, 30) + '...' %>
                            <% } else { %>
                                <%= course.name %>
                            <% } %>
                        </h3>
                        <span class="tile-subtitle">All Videos <%= course.videos %><span class="vl"></span>All Exercises
                                <%= course.exercises %><span class="vl"></span>All Notes <%= course.notes %></span>
                    </div>
                </a>
                <% }); %>
                    <% } else { %>
                        <img src="/images/coming-soon.png" alt="Coming Soon">
                        <% } %>

    </div>
</body>

</html>